# ============================================
# AutoPublisherAI Environment Configuration
# ============================================
#
# IMPORTANT SECURITY NOTES:
# 1. NEVER commit the actual .env file to Git
# 2. Generate strong, unique passwords for production
# 3. Keep this file updated when adding new variables
# 4. Use a password manager to generate secure passwords
#
# Quick setup for development:
# 1. Copy this file: cp .env.example .env
# 2. Replace OPENAI_API_KEY with your actual key
# 3. Change all passwords marked with CHANGE_THIS
# 4. Configure your WordPress/Instagram credentials
#
# ============================================

# ============================================
# Application Environment
# ============================================
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_IMAGE_MODEL=dall-e-3
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# SECURITY: Use strong passwords in production!
# Generate password: openssl rand -base64 32
POSTGRES_USER=autopublisher
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=autopublisher_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database URL (auto-constructed, don't change)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ============================================
# WordPress Configuration
# ============================================
# Get App Password from: WordPress Dashboard > Users > Profile > Application Passwords
WORDPRESS_URL=https://your-wordpress-site.com
WORDPRESS_USERNAME=your_wordpress_username
WORDPRESS_APP_PASSWORD=your_wordpress_app_password

# ============================================
# Instagram Configuration
# ============================================
# Get tokens from: https://developers.facebook.com/
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id

# ============================================
# Facebook Configuration (Optional - for future use)
# ============================================
FACEBOOK_PAGE_ID=your_facebook_page_id
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# ============================================
# X (Twitter) Configuration (Optional - for future use)
# ============================================
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret
X_ACCESS_TOKEN=your_x_access_token
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret

# ============================================
# Service URLs (for Docker Compose)
# ============================================
CONTENT_SERVICE_URL=http://content-service:8000
PUBLISHING_SERVICE_URL=http://publishing-service:8000

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ============================================
# Content Generation Settings
# ============================================
DEFAULT_ARTICLE_LENGTH=1500
DEFAULT_LANGUAGE=ar
SEO_OPTIMIZATION_LEVEL=high
MAX_KEYWORDS=10
INCLUDE_IMAGES=true

# ============================================
# Publishing Settings
# ============================================
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# ============================================
# Task Settings
# ============================================
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT_SECONDS=600

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Security Settings (for production)
# ============================================
# Generate secret key: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Key for service-to-service authentication
# Generate: openssl rand -hex 32
API_SECRET_KEY=CHANGE_THIS_TO_RANDOM_API_KEY_IN_PRODUCTION

# ============================================
# Production Settings (uncomment for production)
# ============================================
# APP_ENV=production
# DEBUG=false
# LOG_LEVEL=WARNING

# ============================================
# SECURITY CHECKLIST FOR PRODUCTION:
# ============================================
# [ ] Changed all default passwords
# [ ] Generated strong JWT_SECRET_KEY (openssl rand -hex 32)
# [ ] Generated strong API_SECRET_KEY (openssl rand -hex 32)
# [ ] Generated strong POSTGRES_PASSWORD (openssl rand -base64 32)
# [ ] Set APP_ENV=production
# [ ] Set DEBUG=false
# [ ] Configured firewall rules
# [ ] Enabled HTTPS/SSL
# [ ] Set up backup strategy
# [ ] Configured monitoring
# [ ] Reviewed all API keys
# [ ] Limited database user permissions
# [ ] Set up rate limiting
# [ ] Configured CORS properly
# ============================================

